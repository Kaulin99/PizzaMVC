@using PizzaMVC.Models;
@model tbPizzaViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cadastro de pizza</h2>

<div class="row">
    <div class="col-md-4">
        <form action="Salvar" method="post">
            <input type="hidden" name="Operacao" value="@ViewBag.Operacao" />

            @if (ViewBag.Operacao == "E")
            {
                <label for="Id" class="control-label">Código da pizza</label>
                <input type="number" name="id" value="@Model.id" class="form-control disabled" readonly />
            }
            <span asp-validation-for="id" class="text-danger"></span>
            <br />

            <label for="descricao" class="control-label">Nome da pizza</label>
            <input type="text" Name="descricao" value="@Model.descricao" class="form-control" />
            <span asp-validation-for="descricao" class="text-danger"></span>
            <br />

            <input type="submit" value="Salvar dados" />
            <br />
        </form>
    </div>
</div>
