@using PizzaMVC.Models;
@model List<tbPizzaViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cardápio de pizza</h2>

<a href="/tbPizza/criar" class="btn btn-info">Novo Registro</a>

<table class="table table-responsive">
    <tr>
        <th>Ações</th>
        <th>Cógido da pizza</th>
        <th>Pizza</th>
        <th>Ingredientes</th>
    </tr>
    @foreach (var pizza in Model)
    {
        <tr>
            <td>
                <a href="/tbPizza/Editar?id=@pizza.id" class="btn btn-info">Editar</a>
            <a href="javascript:apagartbPizza(@pizza.id)" class="btn btn-danger">Apagar</a>
            </td>
            <td>@pizza.id</td>
            <td>@pizza.descricao</td>
            <td> <a href="/tbIngredientes/ListaIngredientes?pizzaId=@pizza.id&pizza=@pizza.descricao">Sabores</a></td>
        </tr>
    }
</table>

<script>
    function apagartbPizza(id) {
        if (confirm('Confirma a exclusão do registro? '))
            location.href = 'tbPizza/Excluir?id=' + id;
    }
</script>