@model List<tbIngredientesViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Listagem de Ingredientes da Pizza de @ViewBag.pizza</h2>

<a href="/tbIngredientes/Criar?pizzaId=@ViewBag.pizzaId&pizza=@ViewBag.pizza" class="btn btn-info">Novo Registro</a>

<table class="table table-responsive table-hover">
    <tr>
        <th>Ações</th>
        <th>Código</th>
        <th>Nome</th>
    </tr>
    @foreach (var ingrediente in Model)
    {
        if (ingrediente != null)
        {
            <tr>
                <td>
                <a href="/tbIngredientes/Editar?id=@ingrediente.id&pizzaId=@ViewBag.pizzaId" class="btn btn-info">Editar</a>
                &nbsp;&nbsp;&nbsp;
                <a href="javascript:Apagar(@ViewBag.pizzaId, @ingrediente.id)" class="btn btn-danger">Apagar</a>
            </td>
            <td>@ingrediente.id</td>
            <td>@ingrediente.descricao</td>
        </tr>
        }
    }
</table>

<a href="/tbPizza/Index" class="btn btn-primary">Voltar ao Cardápio de Pizzas</a>


<script>
    function Apagar(pizzaId,id) 
    {
        if (confirm('Deseja mesmo apagar?')) 
        {
            location.href = '/tbIngredientes/Excluir?pizzaId=' + pizzaId + '&id=' + id
        }
    }
</script>
